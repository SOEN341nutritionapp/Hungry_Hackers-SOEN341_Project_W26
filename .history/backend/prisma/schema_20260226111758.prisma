generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String             @id @default(uuid())
  email              String             @unique
  name               String
  password           String
  dateOfBirth        DateTime?
  sex                String?
  heightCm           Int?
  weightKg           Int?
  allergies          String[]           @default([])
  dietaryPreferences String[]           @default([])
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  recipes            Recipe[]
  extensionSessions  ExtensionSession[]
}

model Recipe {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title        String
  description  String?
  imageUrl     String?
  difficulty   String
  prepTime     Float
  cookTime     Float
  servings     Int
  cost         Float?
  dietaryTags  String[] @default([])

  ingredients  Json
  instructions String[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}

model ExtensionSession {
  id        String   @id @default(cuid())
  jti       String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  expiresAt DateTime
  revokedAt DateTime?

  userAgent String?
  label     String?

  @@index([userId])
}
