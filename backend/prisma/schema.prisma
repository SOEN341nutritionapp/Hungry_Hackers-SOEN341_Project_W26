generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}


model User {
  id                  String   @id @default(uuid())
  email               String   @unique
  name                String
  password            String
  dateOfBirth         DateTime?
  sex                 String?
  heightCm            Int?
  weightKg            Int?
  allergies           String[]  @default([]) 
  dietaryPreferences  String[]  @default([]) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to the Recipe
  recipes              Recipe[]
}

model Recipe {
  // unique identifier for this recipe (auto-generated)
  id                  String   @id @default(uuid()) 
  // ID of the user who created this recipe (foreign key)
  userId              String
  // Relation to User model 
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title               String
  description         String?
  imageUrl            String?
  difficulty          String 
  prepTime            Float
  cookTime            Float
  servings            Int
  cost                Float?
  dietaryTags         String[] @default([])

  // ingredients - json array of objects
  // example: [{"name":"Eggs", "amount": "240, "unit": "ml" }]
  ingredients         Json

  // Instructions - array of steo strings
  instructions        String[]

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([userId])
}

